{
  "name": "notebook-messenger",
  "version": "1.0.0",
  "description": "Desktop messenger for social network",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "messenger",
    "desktop",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.notebook.messenger",
    "productName": "NoteBook Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "assets/**/*",
      "index.html"
    ]
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^10.0.1"
  }
}